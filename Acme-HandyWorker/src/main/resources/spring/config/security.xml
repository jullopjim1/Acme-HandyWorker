		<security:intercept-url pattern="/section/list.do"
			access="permitAll" />

		<security:intercept-url pattern="/actor/showProfileTutorial.do"
			access="permitAll" />

		<security:intercept-url pattern="/tutorial/view.do"
			access="permitAll" />

		<security:intercept-url pattern="/report/list.do"
